{%- from "src/components/Atoms/Link/Link.njk" import UtilityLink %}

{% macro Breadcrumb(Items = []) %}
    <nav aria-label="breadcrumb">
        <ol class="Breadcrumb">
            {% for Item in Items %}
                <li class="Breadcrumb_Item">
                    {% if loop.last %}
                        <span class="Breadcrumb_Item medium">{{ Item.Label }}</span>
                    {% else %}
                        {{ UtilityLink(Item.Label, 'secondary', '-sizeS', 'medium', showIconLeft = false, showIconRight = false, Item.Target ) }}
                        {{ CustomIcon() }}
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>
{% endmacro %}


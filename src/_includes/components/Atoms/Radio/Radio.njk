{% macro Radio (ID, Name, Value, Label, Error = false)%}
    <div class="RadioContainer">
        <label class="{% if Error %} RadioError {% else %} Radio {% endif %}">
            <input type="radio" id="{{ ID }}" name="{{ Name }}" value="{{ Value }}">
            <span class="checkmark"></span>
        </label>
        <label for="{{ ID }}" class="-sizeS regular">{{Label}}</label>
    </div>
{% endmacro %}
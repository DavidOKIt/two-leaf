{% macro Toggle (ID, Name, Value, Label, Error = false)%}
    <div class="ToggleContainer">
        <label class="{% if Error %} ToggleError {% else %} Toggle {% endif %}">
            <input type="checkbox" id="{{ ID }}" name="{{ Name }}" value="{{ Value }}">
            <span class="slider"></span>
        </label>
        <label for="{{ ID }}" class="-sizeS regular">{{Label}}</label>
    </div>
{% endmacro %}